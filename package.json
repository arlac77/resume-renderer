{
  "name": "profile",
  "version": "semantic-release-0.0.0",
  "description": "work profile",
  "publishConfig": {
    "access": "public"
  },
  "private": true,
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "scripts": {
    "start": "vite",
    "test": "npm run test:xspec",
    "test:xspec": "../xspec/bin/xspec.sh tests/knowledge-merge.xspec",
    "lint:css": "stylelint ./src/*.css",
    "lint": "npm run lint:css",
    "lint:xml": "rnv schema/profile-1.0.rnc profile.xml",
    "preview": "vite preview",
    "update-knowledge": "xslt3 -xsl:xslt/profile2knowledge.xsl -s:profile.xml >knowledge-new.xml",
    "normalize-knowledge": "xslt3 -xsl:xslt/normalize-knowledge.xsl -s:profile.xml >knowledge-normalized.xml"
  },
  "devDependencies": {
    "semantic-release": "^23.0.2",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.1.3",
    "vite-plugin-compression2": "^0.12.0",
    "xslt3": "^2.6.0"
  },
  "license": "BSD-2-Clause",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx vite build"
        }
      ]
    ]
  }
}
